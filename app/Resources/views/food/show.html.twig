{% extends 'base.html.twig' %}

{% block body %}
    <h1>Food</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ food.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ food.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ food.price }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('food_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('food_edit', { 'id': food.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}